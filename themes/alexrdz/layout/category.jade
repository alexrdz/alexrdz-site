extends base

prepend site_title
  | #{page.category} &mdash;&nbsp;

block site_body
  button.Stackednav__button.hide-desktop
    .Stackednav__trigger.js-nav-trigger
      .Stackednav__bar
      .Stackednav__bar
      .Stackednav__bar




  .Grid.small-grid--full.Page
    .Grid-cell.Navigation.cell--1of4
      .Navigation__content.height-100
        .height-100
          .is-red
          .is-blue
          .is-green
          .is-yellow
        .container.text-center
          img(src="/img/alexrdz-logo.png", alt="alex rdz. simple. but not simplistic.").logo.animate.fade-in-up
          
          nav.sans-serif
            ul.list-unstyled
              each url, name in theme.menu
                li
                  a(href="#{url}")= name

    .Grid-cell.Main__content
      .Main__content--inner
        .container
          section.Work
            article.Article(class=page.layout)
              header.Article__header.text-center
                p.Article--tags
                  span Hecho en Austin, TX &nbsp; &hearts; &nbsp; Con Puro Pinche Amor
                p.Article--meta.italics
                  | by alexrdz          
                h1.serif= page.category
              
              .Article__content
                include _partial/post/list
                include _partial/post/list_pagination